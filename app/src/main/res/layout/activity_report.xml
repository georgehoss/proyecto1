<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:id="@+id/sv"
    tools:context=".Report.ReportActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       >
       <include layout="@layout/daily_title"
           android:id="@+id/layout_title"
           />


       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:text="Send Report"
           android:id="@+id/bt_send_report"
           android:layout_gravity="center"
           android:drawableStart="@drawable/mail_white"
           android:drawablePadding="10dp"
           android:layout_marginBottom="10dp"
           style="@style/AppTheme.Button" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="10dp"
           android:layout_marginEnd="10dp"
           >

           <TextView
               android:layout_width="0dp"
               android:layout_weight="1.5"
               android:text="Line"
               android:gravity="center"
               android:layout_height="match_parent"
               android:textColor="@color/colorBlueLine"
               android:textStyle="bold"
               android:background="@drawable/daily_title"
               android:padding="5dp"
               />
           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:text="@string/line_actual"
               android:gravity="center"
               android:layout_height="match_parent"
               android:textColor="@color/colorBlueLine"
               android:textStyle="bold"
               android:background="@drawable/daily_title"
               android:padding="5dp"
               />
           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:text="@string/target"
               android:gravity="center"
               android:layout_height="match_parent"
               android:textColor="@color/colorBlueLine"
               android:textStyle="bold"
               android:background="@drawable/daily_title"
               android:padding="5dp"
               />

           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:text="%"
               android:gravity="center"
               android:layout_height="match_parent"
               android:textColor="@color/colorBlueLine"
               android:textStyle="bold"
               android:background="@drawable/daily_title"
               android:padding="5dp"
               />

           <TextView
               android:layout_width="0dp"
               android:layout_weight="1.3"
               android:text="Operators"
               android:gravity="center"
               android:layout_height="match_parent"
               android:textColor="@color/colorBlueLine"
               android:textStyle="bold"
               android:background="@drawable/daily_title"
               android:padding="5dp"
               />

           <TextView
               android:layout_width="0dp"
               android:layout_weight="1.2"
               android:text="Team Leaders"
               android:gravity="center"
               android:layout_height="match_parent"
               android:textColor="@color/colorBlueLine"
               android:textStyle="bold"
               android:background="@drawable/daily_title"
               android:padding="5dp"
               />
           <TextView
               android:layout_width="0dp"
               android:layout_weight="1.2"
               android:text="Group Leaders"
               android:gravity="center"
               android:layout_height="match_parent"
               android:textColor="@color/colorBlueLine"
               android:textStyle="bold"
               android:background="@drawable/daily_title"
               android:padding="5dp"
               />

           <TextView
               android:layout_width="0dp"
               android:layout_weight="1.3"
               android:text="Downtime"
               android:gravity="center"
               android:layout_height="match_parent"
               android:textColor="@color/colorBlueLine"
               android:textStyle="bold"
               android:background="@drawable/daily_title"
               android:padding="5dp"
               />
           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:text="FTQs"
               android:gravity="center"
               android:layout_height="match_parent"
               android:textColor="@color/colorBlueLine"
               android:textStyle="bold"
               android:background="@drawable/daily_title"
               android:padding="5dp"
               />

           <TextView
               android:layout_width="0dp"
               android:layout_weight="1.2"
               android:text="Rejects"
               android:gravity="center"
               android:layout_height="match_parent"
               android:textColor="@color/colorBlueLine"
               android:textStyle="bold"
               android:background="@drawable/daily_title"
               android:padding="5dp"
               />

           <TextView
               android:layout_width="0dp"
               android:layout_weight="1.2"
               android:text="Actions"
               android:gravity="center"
               android:layout_height="match_parent"
               android:textColor="@color/colorBlueLine"
               android:textStyle="bold"
               android:background="@drawable/daily_title"
               android:padding="5dp"
               />



       </LinearLayout>

       <android.support.v7.widget.RecyclerView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/rv_lines"
           android:layout_marginStart="10dp"
           android:layout_marginEnd="10dp"
           />

   </LinearLayout>



</ScrollView>