<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".Lines.AddEditLineActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/add_edit_production_line"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:id="@+id/tv_title"
            />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:animateLayoutChanges="true"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/add_name"
                    />
                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:hint="@string/add_name_402"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/background_rectangle"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorHint"
                    android:textStyle="bold"
                    android:gravity="center"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/cv_s1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:animateLayoutChanges="true"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_1st_shift"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorPrimary"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:id="@+id/tv_shift1"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/ll_shift1"
                    android:background="@drawable/bg_shift"
                    android:layout_margin="10dp"
                    android:animateLayoutChanges="true"
                    android:visibility="gone"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="@string/add_time"
                            android:gravity="center"
                            android:padding="5dp"
                            android:background="@drawable/bg_shift2"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/add_target"
                            android:gravity="center"
                            android:padding="5dp"
                            android:background="@drawable/bg_shift2"
                            />
                        <TextView
                            android:padding="5dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/add_cumulative_planned"
                            android:maxLines="1"
                            android:gravity="center"
                            android:background="@drawable/bg_shift2"
                            />
                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/rv_shift1"
                        />


                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/cv_s2"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:animateLayoutChanges="true"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_2nd_shift"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorPrimary"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:id="@+id/tv_shift2"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/ll_shift2"
                    android:background="@drawable/bg_shift"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    android:animateLayoutChanges="true"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="@string/add_time"
                            android:gravity="center"
                            android:padding="5dp"
                            android:background="@drawable/bg_shift2"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/add_target"
                            android:gravity="center"
                            android:padding="5dp"
                            android:background="@drawable/bg_shift2"
                            />
                        <TextView
                            android:padding="5dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/add_cumulative_planned"
                            android:gravity="center"
                            android:maxLines="1"
                            android:background="@drawable/bg_shift2"
                            />
                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rv_shift2"
                        />


                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/cv_s3"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:animateLayoutChanges="true"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_3rd_shift"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorPrimary"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:id="@+id/tv_shift3"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/ll_shift3"
                    android:background="@drawable/bg_shift"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    android:animateLayoutChanges="true"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="@string/add_time"
                            android:gravity="center"
                            android:padding="5dp"
                            android:background="@drawable/bg_shift2"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/add_target"
                            android:gravity="center"
                            android:padding="5dp"
                            android:background="@drawable/bg_shift2"
                            />
                        <TextView
                            android:padding="5dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/add_cumulative_planned"
                            android:gravity="center"
                            android:maxLines="1"
                            android:background="@drawable/bg_shift2"
                            />
                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rv_shift3"
                        />

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/cv_sr"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:animateLayoutChanges="true"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/shift_report"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorPrimary"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:id="@+id/tv_position"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/ll_position"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    android:animateLayoutChanges="true"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="@string/add_new_position"
                            android:gravity="center"
                            android:layout_margin="5dp"
                            android:textSize="20sp"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add_add"
                            android:id="@+id/bt_add_position"
                            style="@style/AppTheme.Button"/>

                    </LinearLayout>


                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/rv_position"
                        android:layout_margin="5dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="@string/add_list_of_employees"
                            android:gravity="center"
                            android:layout_margin="5dp"
                            android:textSize="18sp"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            />

                        <Button
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/AppTheme.Button"
                            android:text="@string/preview_lists"
                            android:id="@+id/bt_list_shift1"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_shift"
                        android:layout_margin="5dp"

                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2.5"
                                android:text="@string/employees"
                                android:gravity="center"
                                android:background="@drawable/bg_shift2"
                                android:padding="5dp"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:text="@string/shift"
                                android:gravity="center"
                                android:background="@drawable/bg_shift2"
                                android:padding="5dp"
                                />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/available"
                                android:gravity="center"
                                android:background="@drawable/bg_shift2"
                                android:padding="5dp"
                                />

                        </LinearLayout>

                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rv_employee"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/cv_dt"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:animateLayoutChanges="true"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_downtime"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorPrimary"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:id="@+id/tv_downtime"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/ll_downtime"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    android:animateLayoutChanges="true"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Zones"
                            android:gravity="center"
                            android:layout_margin="5dp"
                            android:textSize="20sp"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add_add"
                            android:id="@+id/bt_add_downtime"
                            android:gravity="center"
                            android:layout_gravity="center"
                            style="@style/AppTheme.Button" />


                    </LinearLayout>


                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/rv_downtime"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Reasons"
                            android:gravity="center"
                            android:layout_margin="5dp"
                            android:textSize="20sp"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add_add"
                            android:id="@+id/bt_add_downtime_reasons"
                            android:gravity="center"
                            android:layout_gravity="center"
                            style="@style/AppTheme.Button"
                            />


                    </LinearLayout>


                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/rv_downtime_reasons"
                        />


                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/cv_ss"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:animateLayoutChanges="true"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/scrap_event"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorPrimary"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:id="@+id/tv_scrap"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/ll_scrap"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    android:animateLayoutChanges="true"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Scrap Reasons"
                            android:gravity="center"
                            android:layout_margin="5dp"
                            android:textSize="20sp"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add_add"
                            android:id="@+id/bt_add_scrap"
                            android:gravity="center"
                            android:layout_gravity="center"
                            style="@style/AppTheme.Button" />



                    </LinearLayout>


                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/rv_scrap"
                        />

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>