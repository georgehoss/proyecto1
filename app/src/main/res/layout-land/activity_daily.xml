<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <include layout="@layout/daily_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/daily_case"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/daily_title"
            android:gravity="center"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:text="@string/add_time"
                android:gravity="center"
                android:layout_height="match_parent"
                android:textColor="@color/colorBlueLine"
                android:textStyle="bold"
                android:background="@drawable/daily_title"
                android:padding="5dp"

                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/add_target"
                android:gravity="center"
                android:layout_height="match_parent"
                android:textColor="@color/colorBlueLine"
                android:textStyle="bold"
                android:background="@drawable/daily_title"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@color/colorBlueLine"
                android:textStyle="bold"
                android:background="@drawable/daily_title"
                android:text="@string/daily_actuals"
                android:gravity="center"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@color/colorBlueLine"
                android:textStyle="bold"
                android:background="@drawable/daily_title"
                android:text="@string/daily_variance"
                android:gravity="center"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:textColor="@color/colorBlueLine"
                android:textStyle="bold"
                android:background="@drawable/daily_title"
                android:text="@string/daily_cumulative_total"
                android:gravity="center"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:textColor="@color/colorBlueLine"
                android:textStyle="bold"
                android:background="@drawable/daily_title"
                android:text="@string/daily_comments_problems"
                android:gravity="center"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@color/colorBlueLine"
                android:textStyle="bold"
                android:background="@drawable/daily_title"
                android:text="@string/daily_owner"
                android:gravity="center"
                android:padding="5dp"
                android:visibility="gone"
                />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_lines"
            />

    </LinearLayout>

    <include layout="@layout/shift_table"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/daily_report_hour"
            android:id="@+id/bt_hour"
            android:layout_margin="10dp"
            style="@style/AppTheme.Button"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/daily_end_1st_shift"
            android:id="@+id/bt_end_s1"
            android:layout_margin="10dp"
            style="@style/AppTheme.Button" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/dailly_end_2nd_shift"
            android:id="@+id/bt_end_s2"
            android:layout_margin="10dp"
            style="@style/AppTheme.Button" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/daily_end_3rd_shift"
            android:id="@+id/bt_end_s3"
            android:layout_margin="10dp"
            style="@style/AppTheme.Button" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/daily_downtime"
            android:id="@+id/bt_downtime"
            android:layout_margin="10dp"
            style="@style/AppTheme.Button" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/daily_leak_failure_counter"
            android:id="@+id/bt_counter"
            android:layout_margin="10dp"
            style="@style/AppTheme.Button" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/daily_scrap_event"
            android:id="@+id/bt_event"
            android:layout_margin="10dp"
            style="@style/AppTheme.Button" />
    </LinearLayout>
</LinearLayout>
</ScrollView>